; Enable memcache extension module
; priority={{php_memcache_extension_priority}}
extension={{php_memcache_extension}}

; Options for the memcache module

; Whether to transparently failover to other servers on errors
memcache.allow_failover={{php_memcache_allow_failover}}

; Defines how many servers to try when setting and getting data.
memcache.max_failover_attempts={{php_memcache_max_failover_attempts}}

; Data will be transferred in chunks of this size
memcache.chunk_size={{php_memcache_chunk_size}}

; The default TCP port number to use when connecting to the memcached server
memcache.default_port={{php_memcache_default_port}}

; Hash function {crc32, fnv}
memcache.hash_function={{php_memcache_hash_function}}

; Hash strategy {standard, consistent}
memcache.hash_strategy={{php_memcache_hash_strategy}}

; Options to use the memcache session handler

; Use memcache as a session handler
session.save_handler={{php_memcache_session_save_handler}}
; Defines a comma separated of server urls to use for session storage
session.save_path="{{php_memcache_session_save_path}}"
